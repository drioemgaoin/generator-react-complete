{
    "language": {
        "options": [
            {
                "name": "javascript"
            },
            {
                "name": "typescript"
            }
        ],
        "default": "javascript"
    },
    "compiler": {
        "options": [
            {
                "name": "es5"
            },
            {
                "name": "es6"
            },
            {
                "name": "commonjs"
            },
            {
                "name": "amd"
            },
            {
                "name": "umd"
            }
        ],
        "default": "es6"
    },
    "framework": {
        "options": [
            {
                "name": "none"
            },
            {
                "name": "react",
                "file": {
                    "source": "component.{compiler}.{extension}",
                    "destination": "component.{extension}"
                },
                "extensions": {
                    "javascript": "jsx",
                    "typescript": "tsx"
                }
            }
        ],
        "default": "none"
    },
    "bundler": {
        "options": [
            {
                "name": "webpack",
                "value": "webpack",
                "file": {
                    "source": "webpack.{language}.config.js",
                    "destination": "webpack.config.js"
                },
                "devDependencies": [
                    { "name": "webpack", "version": "^3.0.0" },
                    { "name": "babel-core", "version": "6.25.0" },
                    { "name": "babel-loader", "version": "7.1.0" },
                    { "name": "babel-preset-es2015", "version": "6.24.1" },
                    { "name": "babel-preset-react", "version": "6.24.1" },
                    { "name": "babel-preset-stage-0", "version": "6.24.1" },
                    { "name": "path", "version": "0.12.7" },
                    { "name": "ts-loader", "version": "^2.0.3" }
                ]
            }
        ],
        "default": "webpack"
    },
    "transpiler": {
        "options": [
            {
                "name": "babel",
                "value": "babel",
                "config": "jsconfig.json"
            },
            {
                "name": "typescript",
                "value": "typescript",
                "config": "tsconfig.json",
                "devDependencies": [
                    { "name": "typescript", "version": "^2.2.1" }
                ]
            }
        ],
        "default": "babel"
    }
}
