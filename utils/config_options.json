{
    "language": {
        "options": [
            {
                "name": "javascript"
            },
            {
                "name": "typescript"
            }
        ],
        "default": "javascript"
    },
    "compiler": {
        "options": [
            {
                "name": "javascript",
                "values": [
                    {
                        "name": "es5"
                    },
                    {
                        "name": "es6"
                    }
                ]
            },
            {
                "name": "typescript",
                "values": [
                    {
                        "name": "es3"
                    },
                    {
                        "name": "es5"
                    },
                    {
                        "name": "es6"
                    },
                    {
                        "name": "es2015"
                    },
                    {
                        "name": "es2017"
                    },
                    {
                        "name": "esnext"
                    }
                ]
            }

        ],
        "default": "es6"
    },
    "framework": {
        "options": [
            {
                "name": "none",
                "files": {
                    "javascript": [
                        {
                            "source": "index.{compiler}.{extension}",
                            "destination": "src/index.js"
                        }
                    ],
                    "typescript": [
                        {
                            "source": "index.{extension}",
                            "destination": "src/index.ts"
                        }
                    ]
                },
                "extensions": {
                    "javascript": {
                        "default": "js"
                    },
                    "typescript": {
                        "default": "ts"
                    }
                },
                "entryPoint": {
                    "file": "src/index.{extension}"
                }
            },
            {
                "name": "react",
                "files": {
                    "javascript": [
                        {
                            "source": "components/component.{compiler}.{extension}",
                            "destination": "src/components/component.{extension}"
                        },
                        {
                            "source": "index.js",
                            "destination": "src/index.js"
                        }
                    ],
                    "typescript": [
                        {
                            "source": "components/component.{extension}",
                            "destination": "src/components/component.{extension}"
                        },
                        {
                            "source": "index.js",
                            "destination": "src/index.js"
                        }
                    ]
                },
                "extensions": {
                    "javascript": {
                        "default": "js",
                        "draft": "jsx"
                    },
                    "typescript": {
                        "default": "ts",
                        "draft": "tsx",
                        "entryPoint": "js"
                    }
                },
                "dependencies":{
                    "default": [
                        { "name": "react", "version": "^15.4.2" },
                        { "name": "react-dom", "version": "^15.4.2" }
                    ],
                    "typescript": [
                        { "name": "@types/react", "version": "^15.0.13" },
                        { "name": "@types/react-dom", "version": "^0.14.23" }
                    ]
                },
                "entryPoint": {
                    "file": "src/index.{extension}"
                }
            }
        ],
        "default": "none"
    },
    "bundler": {
        "options": [
            {
                "name": "webpack",
                "value": "webpack",
                "file": {
                    "source": "webpack.{language}.config.js",
                    "destination": "webpack.config.js"
                },
                "devDependencies":{
                    "default": [
                        { "name": "webpack", "version": "^3.0.0" },
                        { "name": "babel-core", "version": "6.25.0" },
                        { "name": "babel-loader", "version": "7.1.0" },
                        { "name": "babel-preset-es2015", "version": "6.24.1" },
                        { "name": "babel-preset-react", "version": "6.24.1" },
                        { "name": "babel-preset-stage-0", "version": "6.24.1" },
                        { "name": "path", "version": "0.12.7" },
                        { "name": "ts-loader", "version": "^2.0.3" }
                    ]
                }
            }
        ],
        "default": "webpack"
    },
    "transpiler": {
        "options": [
            {
                "name": "babel",
                "value": "babel",
                "config": "jsconfig.json"
            },
            {
                "name": "typescript",
                "value": "typescript",
                "config": "tsconfig.json",
                "devDependencies":{
                    "default": [
                        { "name": "typescript", "version": "^2.2.1" }
                    ]
                }
            }
        ],
        "default": "babel"
    }
}
